	author = {López-Sepúlveda, P. and Takayama, K. and Crawford, D. J. and Greimler, J. and Peñailillo, P. and Baeza, M. and Ruiz, E. and Kohl, G. and Tremetsberger, K. and Gatica, A. and Letelier, L. and Novoa, P. and Novak, J. and Stuessy, T. F.},
