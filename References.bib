	number = {2},
	urldate = {2020-04-29},
	journal = {Chilean journal of agricultural research},
	author = {Araneda Durán, X. and Breve Ulloa, R. and Aguilera Carrillo, J. and Lavín Contreras, J. and Toneatti Bastidas, M.},
	month = jun,
	year = {2010},
	pages = {309--314},
	file = {Araneda Durán et al. - 2010 - Evaluation of Yield Component Traits of Honeybee-P.pdf:files/641/Araneda Durán et al. - 2010 - Evaluation of Yield Component Traits of Honeybee-P.pdf:application/pdf}
}

@article{arismendi_molecular_2016,
