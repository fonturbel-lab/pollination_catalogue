@article{gonzalez-vaquero_antennal_2016,
	title = {Antennal sensilla analyses as useful tools in the revision of the sweat-bee subgenus \textit{{Corynura}} (\textit{{Callistochlora}}) {Michener} ({Hymenoptera}: {Halictidae})},
